{
    "name": "cgf.cameracontrol.main",
    "version": "1.0.0",
    "description": "Software that allows to contorl Blackmagicdesign ATEM Switcher and it's associated cameras",
    "keywords": [
        "camera",
        "control",
        "atem"
    ],
    "homepage": "https://github.com/sensslen/Cgf.CameraControl#readme",
    "bugs": {
        "url": "https://github.com/sensslen/Cgf.CameraControl/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sensslen/Cgf.CameraControl.git"
    },
    "license": "MIT",
    "author": {
        "name": "Simon Ensslen",
        "email": "sensslen@gmail.com"
    },
    "main": ".webpack/main",
    "scripts": {
        "generate-config-validation-schema": "make-dir src/Core/TypeValidation && ts-json-schema-generator --path ./src/**/*.ts --type IConfigFile -o ./src/Core/TypeValidation/IConfigFile.json --tsconfig ./tsconfig.json --additional-properties true",
        "postinstall": "sort-package-json",
        "lint": "eslint --ext .ts .",
        "make": "electron-forge make",
        "package": "electron-forge package",
        "prebuild": "npm run generate-config-validation-schema",
        "publish": "electron-forge publish",
        "start": "electron-forge start"
    },
    "config": {
        "forge": {
            "packagerConfig": {},
            "makers": [
                {
                    "name": "@electron-forge/maker-squirrel",
                    "config": {
                        "name": "Cgf.CameraControl.Main"
                    }
                },
                {
                    "name": "@electron-forge/maker-zip",
                    "platforms": [
                        "darwin"
                    ]
                },
                {
                    "name": "@electron-forge/maker-deb",
                    "config": {}
                },
                {
                    "name": "@electron-forge/maker-rpm",
                    "config": {}
                }
            ],
            "plugins": [
                [
                    "@electron-forge/plugin-webpack",
                    {
                        "mainConfig": "./webpack.main.config.js",
                        "renderer": {
                            "config": "./webpack.renderer.config.js",
                            "entryPoints": [
                                {
                                    "html": "./src/Gui/MainWindow/index.html",
                                    "js": "./src/Gui/MainWindow/renderer.tsx",
                                    "preload": {
                                        "js": "./src/WindowInterface/preload.ts"
                                    },
                                    "name": "main_window"
                                }
                            ]
                        }
                    }
                ]
            ]
        }
    },
    "dependencies": {
        "@microsoft/signalr": "^5.0.1",
        "ajv": "^6.9.1",
        "atem-connection": "^2.1.0",
        "axios": "^0.21.1",
        "electron-squirrel-startup": "^1.0.0",
        "everpolate": "0.0.3",
        "node-hid": "^2.1.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "strict-event-emitter-types": "^2.0.0",
        "styled-components": "^5.2.1",
        "usb-detection": "^4.10.0"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.0.0-beta.54",
        "@electron-forge/maker-deb": "^6.0.0-beta.54",
        "@electron-forge/maker-rpm": "^6.0.0-beta.54",
        "@electron-forge/maker-squirrel": "^6.0.0-beta.54",
        "@electron-forge/maker-zip": "^6.0.0-beta.54",
        "@electron-forge/plugin-webpack": "^6.0.0-beta.54",
        "@marshallofsound/webpack-asset-relocator-loader": "^0.5.0",
        "@types/node-hid": "^1.3.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/styled-components": "^5.1.7",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "css-loader": "^4.3.0",
        "electron": "11.1.1",
        "eslint": "^7.17.0",
        "eslint-plugin-import": "^2.22.1",
        "fork-ts-checker-webpack-plugin": "^5.2.1",
        "make-dir-cli": "^2.0.0",
        "node-loader": "^1.0.2",
        "sort-package-json": "^1.48.0",
        "style-loader": "^1.3.0",
        "ts-json-schema-generator": "^0.82.0",
        "ts-loader": "^8.0.13",
        "typescript": "^4.1.3"
    },
    "productName": "Cgf.CameraControl.Main"
}
