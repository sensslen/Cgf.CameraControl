{
    "name": "cgf.cameracontrol.main",
    "version": "1.0.0",
    "description": "Software that allows to contorl Blackmagicdesign ATEM Switcher and it's associated cameras",
    "keywords": [
        "camera",
        "control",
        "atem"
    ],
    "homepage": "https://github.com/sensslen/Cgf.CameraControl#readme",
    "bugs": {
        "url": "https://github.com/sensslen/Cgf.CameraControl/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/sensslen/Cgf.CameraControl.git"
    },
    "license": "MIT",
    "author": "Simon Ensslen",
    "main": "./dist/main.bundle.js",
    "scripts": {
        "build:mac": "electron-builder build --mac --x64",
        "build:win": "electron-builder build --win --x64",
        "prebuild": "rimraf dist && npm run generate-config-validation-schema",
        "dev": "npm run prebuild && cross-env NODE_ENV=development webpack --watch --progress --color",
        "prod": "npm run prebuild && cross-env NODE_ENV=production webpack --progress --color",
        "start": "electron ./dist/main.bundle.js",
        "test": "mocha -r ts-node/register -r tsconfig-paths/register \"test/**/*.ts\"",
        "generate-config-validation-schema": "make-dir src/Core/TypeValidation && ts-json-schema-generator --path ./src/**/*.ts --type IConfigFile -o ./src/Core/TypeValidation/IConfigFile.json --tsconfig ./tsconfig.json --additional-properties true"
    },
    "dependencies": {
        "@microsoft/signalr": "^5.0.1",
        "ajv": "^6.9.1",
        "atem-connection": "^2.1.0",
        "axios": "^0.21.1",
        "everpolate": "0.0.3",
        "node-hid": "^2.1.1",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "strict-event-emitter-types": "^2.0.0",
        "usb-detection": "^4.10.0"
    },
    "devDependencies": {
        "@teamsupercell/typings-for-css-modules-loader": "^2.4.0",
        "@types/mocha": "^8.2.0",
        "@types/node-hid": "^1.3.0",
        "@types/react": "^17.0.0",
        "@types/react-dom": "^17.0.0",
        "@types/react-router": "^5.1.9",
        "@types/react-router-dom": "^5.1.7",
        "@types/styled-components": "^5.1.7",
        "@types/yargs": "^15.0.12",
        "@typescript-eslint/eslint-plugin": "^4.11.1",
        "@typescript-eslint/parser": "^4.11.1",
        "copy-webpack-plugin": "^7.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^5.0.1",
        "electron": "^11.1.1",
        "electron-builder": "^22.9.1",
        "eslint": "^7.16.0",
        "eslint-config-airbnb": "^18.2.1",
        "eslint-import-resolver-webpack": "^0.13.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jsx-a11y": "^6.4.1",
        "eslint-plugin-react": "^7.22.0",
        "eslint-plugin-react-hooks": "^4.2.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^4.5.0",
        "lodash": "^4.17.20",
        "make-dir-cli": "^2.0.0",
        "mocha": "^8.2.1",
        "rimraf": "^3.0.2",
        "source-map-loader": "^2.0.0",
        "spectron": "^13.0.0",
        "style-loader": "^2.0.0",
        "ts-json-schema-generator": "^0.82.0",
        "ts-loader": "^8.0.13",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.3",
        "webpack": "^5.11.1",
        "webpack-cli": "^4.3.1"
    },
    "build": {
        "appId": "com.devtography.electron_boilerplate",
        "productName": "Electron+React+TypeScript Boilerplate",
        "directories": {
            "app": "./dist/",
            "output": "./out/"
        },
        "mac": {
            "target": "dmg"
        },
        "win": {
            "target": "nsis",
            "asar": true
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        },
        "buildVersion": "1"
    }
}
